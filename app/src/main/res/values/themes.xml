<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BIATestApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/test</item>
    </style>

    <style name="Theme.BIATestApp" parent="Base.Theme.BIATestApp">

        <item name="colorSurface">@color/white</item>

    </style>
    
    <style name="Theme.BIATestApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/test</item>
        <item name="postSplashScreenTheme">@style/Theme.BIATestApp</item>
    </style>

    <style name="ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/dark_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/stolzl_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/dark_button_container</item>
    </style>

    <style name="TaskDeclineButton" parent="ActionButton">
        <item name="android:textColor">@color/light_button_text_color</item>
        <item name="android:background">@drawable/light_button_container</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/stolzl_regular</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/light_button_text_color</item>
        <item name="backgroundTint">@null</item>
        <item name="iconTint">@color/light_button_text_color</item>
        <item name="android:background">@drawable/light_button_container</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    
    <style name="BottomViewActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_gray_blue</item>
    </style>

    <style name="BottomNavBar">
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="DetailsTypeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/stolzl_book</item>
        <item name="android:textColor">@color/bia_gray_color</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    
    <style name="DetailsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/stolzl_regular</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="DetailsBottomTextView" parent="DetailsTextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/stolzl_regular</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TaskImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
    </style>
</resources>